{
	"listeners": {
	  "*:8080": {
		"pass": "routes"
	  }
	},
	"routes": [
	  {
		"match": {
		  "uri": [
			"*.php",
			"*.php/*"
		  ]
		},
		"action": {
		  "pass": "applications/phpapp/direct"
		}
	  },
	  {
		"action": {
		  "share": "/usr/src/app/public$uri",
		  "fallback": {
			"pass": "applications/phpapp/index"
		  }
		}
	  }
	],
	"applications": {
	  "phpapp": {
		"type": "php",
		"processes": {
		  "max": 32,
		  "spare": 2,
		  "idle_timeout": 10
		},
		"targets": {
		  "direct": {
			"root": "/usr/src/app/public/"
		  },
		  "index": {
			"root": "/usr/src/app/public/",
			"script": "index.php"
		  }
		}
	  }
	},

	"access_log": "/dev/stdout"
  }
